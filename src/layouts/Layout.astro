---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'OzempicClaw' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content="OzempicClaw - The thinnest agent framework yet" />
    <meta property="og:description" content="The thinnest agent framework yet. 97% smaller than OpenClaw. Side effects may include mass loss of dependencies." />
    <meta property="og:image" content="/og-image.svg" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="OzempicClaw - The thinnest agent framework yet" />
    <meta name="twitter:description" content="The thinnest agent framework yet. 97% smaller than OpenClaw. Side effects may include mass loss of dependencies." />
    <meta name="twitter:image" content="/og-image.svg" />
    <title>{title}</title>
    <meta name="description" content="The thinnest agent framework yet." />
  </head>
  <body>
    <slot />
  </body>
</html>
